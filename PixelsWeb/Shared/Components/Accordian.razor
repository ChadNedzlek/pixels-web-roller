@code {

    [Parameter]
    public RenderFragment Title { get; set; }

    [Parameter]
    public string Id { get; set; }

    [Parameter]
    public RenderFragment Body { get; set; }
}

<div class="accordion" id="accordion-@Id">
    <AccordianItem Id="@Id" ParentId="@($"accordion-{Id}")">
        <Title>@Title</Title>
        <Body>@Body</Body>
    </AccordianItem>
</div>